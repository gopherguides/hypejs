{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "declaration": true,
    "useUnknownInCatchVariables": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
